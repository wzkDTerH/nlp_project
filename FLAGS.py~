import argparse
parser = argparse.ArgumentParser()
train_answer = parser.add_mutually_exclusive_group()
train_answer.add_argument('--train',help='Train the model',
                          action='store_true')
train_answer.add_argument('--answer',help='Answer the model',
                          action='store_true')
parser.add_argument('--batchSize',help='batch size',
                    action='store',
                    type=int,
                    default=64)
parser.add_argument('--vectorLen',help='lenght of vector after word embedding ',
                    action='store',
                    type=int,
                    default=100)
parser.add_argument('--maxSupportLen',help='max of the number of support-text\'words',
                    action='store',
                    type=int,
                    default=1400)
parser.add_argument('--maxQueryLen',help='max of the number of query-text\'words',
                    action='store',
                    type=int,
                    default=220)
parser.add_argument('--optionLen',help='the number of options',
                    action='store',
                    type=int,
                    default=10)
parser.add_argument('--stateSize',help='the number of GRU state cells',
                    action='store',
                    type=int,
                    default=128)
parser.add_argument('--trainTrun',help='the number of training truns',
                    action='store',
                    type=int,
                    default=10000)
parser.add_argument('--EPSILON',help='EPSILON',
                    action='store',
                    type=float,
                    default=1e-8)
parser.add_argument('--modelPath',help='path of rnn model',
                    action='store',
                    type=str,
                    default='./model/')
parser.add_argument('--testDataName',help='dir&name of test data file',
                    action='store',
                    type=str,
                    default='./dataset/test.txt')
parser.add_argument('--devDataName',help='dir&name of dev data file',
                    action='store',
                    type=str,
                    default='./dataset/dev.txt')
parser.add_argument('--trainDataName',help='dir&name of train data file',
                    action='store',
                    type=str,
                    default='./dataset/train.txt')
parser.add_argument('--vectorName',help='dir&name of word-embedding file',
                    action='store',
                    type=str,
                    default='./dataset/vector.txt')
parser.add_argument('--reasultDir',
                    action='store',
                    type=str,
                    default='./dataset/reasult/')

parser.add_argument('--version',version='%(prog)s v1.0',
                    action='version')
FLAGS = parser.parse_args()

